{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Impresso Auth Server",
      "type": "debugpy",
      "request": "launch",
      "module": "impresso_content_auth.server",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: CLI - Server Mode",
      "type": "debugpy",
      "request": "launch",
      "module": "impresso_content_auth.main",
      "args": ["--server"],
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: CLI - Help",
      "type": "debugpy",
      "request": "launch",
      "module": "impresso_content_auth.main",
      "args": ["--help"],
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
